@model LoginViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>
	<title>Giriş</title>
	<!--Made with love by Mutiullah Samim -->

</head>
<body>
	<div class="container">
		<div class="d-flex justify-content-center h-100">
			<div class="card">
				@if (TempData["RegisterSuccessMsg"] != null)
				{
					<div class="alert alert-success alert-dismissible fade show" role="alert">
						<i class="bi bi-check-circle-fill"></i>
						@TempData["RegisterSuccessMsg"]
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				}

				@if (TempData["RegisterWarningMsg"] != null)
				{
					<div class="alert alert-warning alert-dismissible fade show" role="alert">
						<i class="bi bi-check-circle-fill"></i>
						@TempData["RegisterWarningMsg"]
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				}

				<div class="card-header">
					<div class="text-danger" asp-validation-summary="All"></div>

					<h3>Giriş Yap</h3>
					@*<div class="d-flex justify-content-end social_icon">
					<span><i class="fab fa-facebook-square"></i></span>
					<span><i class="fab fa-google-plus-square"></i></span>
					<span><i class="fab fa-twitter-square"></i></span>
					</div>*@
				</div>
				<div class="card-body">
					<form asp-controller="Account" asp-action="Login" method="post">
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" class="form-control" placeholder="Kullanıcı adı veya Email" asp-for="UsernameOrEmail">

						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" class="form-control" placeholder="Şifre" asp-for="Password">
						</div>
						<div class="row align-items-center remember">
							<input type="checkbox">Beni Hatırla !
						</div>
						<div class="form-group">
							<input type="submit" value="Giriş Yap" class="btn float-right login_btn">
						</div>
					</form>
				</div>
				@*<div class="card-footer">
				<div class="d-flex justify-content-center links">
				Don't have an account?<a href="#">Kayıt Ol</a>
				</div>
				<div class="d-flex justify-content-center">
				<a href="#">Forgot your password?</a>
				</div>
				</div>*@
			</div>
		</div>
	</div>
</body>
</html>