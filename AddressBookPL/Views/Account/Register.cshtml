@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Giriş</title>
    <!--Made with love by Mutiullah Samim -->

</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                @if (TempData["RegisterSuccessMsg"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill"></i>
                        @TempData["RegisterSuccessMsg"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["RegisterWarningMsg"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill"></i>
                        @TempData["RegisterWarningMsg"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="card-header">
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <h3>Kayıt Ol</h3>
                    @*<div class="d-flex justify-content-end social_icon">
                    <span><i class="fab fa-facebook-square"></i></span>
                    <span><i class="fab fa-google-plus-square"></i></span>
                    <span><i class="fab fa-twitter-square"></i></span>
                    </div>*@
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>*@
                            <input type="text" class="form-control" placeholder="İsim" asp-for="FirstName">

                        </div>
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>*@
                            <input type="text" class="form-control" placeholder="Soyisim" asp-for="LastName">

                        </div>
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>*@
                            <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="Username">

                        </div>
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>*@
                            <input type="email" class="form-control" placeholder="Email" asp-for="Email">

                        </div>
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>*@
                            <input type="tel" class="form-control" placeholder="Telefon Numarası" asp-for="Phone">

                        </div>
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>*@
                            <input type="date" class="form-control" placeholder="Doğum Tarihi" asp-for="Birthdate">

                        </div>
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>*@
                            <input type="password" class="form-control" placeholder="Şifre" asp-for="Password">
                        </div>
                        <div class="input-group form-group">
                            @* <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>*@
                            <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="PasswordConfirm">
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox">Beni Hatırla !
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Kayıt Ol" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
                @*<div class="card-footer">
                <div class="d-flex justify-content-center links">
                Don't have an account?<a href="#">Kayıt Ol</a>
                </div>
                <div class="d-flex justify-content-center">
                <a href="#">Forgot your password?</a>
                </div>
                </div>*@
            </div>
        </div>
    </div>
</body>
</html>
